{% extends 'banner.html.twig' %}
{% block content %}
  <!--  NAVIGATION -->
  <nav>
    <ul class="menu">
      <li><a href="{{ landing_page }}">Home</a></li>
      <li><a href="{{ landing_page }}" class="active">Account</a></li>
    </ul>
  </nav>

  <main class="main" id="mainmessage">
  <!--    INTRO -->


    {% for message in message_array %}
      <!--    MESSAGES  -->
      <div class="forms">
        <!--    REGISTER  -->
        <section class="messages">
          <!--    LOGIN  -->
          <form action="registered.html" method="get">
            <h4>Message</h4>

            <label>Number:</label>
            <output>{{ message.getSender() }}</output>
            <label>Receiver:</label>
            <output>{{ message.getReceiver() }}</output>
            <label>Time:</label>
            <output>{{ message.getDate() }}</output>
            <label>Bearer:</label>
            <output>{{ message.getBearer() }}</output>
            <label>Message:</label>
            <textarea>{{ message.getMessage() }}</textarea>
          </form>
        </section>
      </div>
    {% endfor %}

  <!--  FOOTER   -->
  <footer class="footer">
    <h5><a href="{{ landing_page }}" class="heading">EE M2M SOAP Server Application</a></h5>
    <h6><a href="{{ landing_page }}" class="heading">CTEC3110 Secure Web Application Development</a></h6>

    <p id="footer"><a href="https://github.com/alexm1751/SecureWebApp">Created by Alex Mason, Dominic Bryan and Alistair Laughland</a></p>

    <a href="https://validator.w3.org/"><img src="https://www.w3.org/Icons/valid-html401" alt="w3 HTML 4.01 / HTML DTD Validation" id="validation"></a>
  </footer>
{% endblock %}